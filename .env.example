# 🚀 Claude-AppsScript-Pro Environment Configuration Template v2.1.0
# Copy this file to .env and fill in your actual values

# === Google OAuth 2.0 Configuration ===
# 必須: Google Cloud Console から取得
GOOGLE_APP_SCRIPT_API_CLIENT_ID=your_client_id_here
GOOGLE_APP_SCRIPT_API_CLIENT_SECRET=your_client_secret_here
GOOGLE_APP_SCRIPT_API_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_APP_SCRIPT_API_REDIRECT_URI=http://localhost:3001/oauth/callback

# === Logging Configuration ===
# ログレベル設定 (error, warn, info, debug)
LOG_LEVEL=error

# === Development Configuration ===
# 開発環境設定
NODE_ENV=production

# === MCP Server Configuration ===
# MCPサーバー固有設定
MCP_SERVER_NAME=claude-appsscript-pro
MCP_SERVER_VERSION=2.1.0

# === Browser Debug Configuration (New in v2.1.0) ===
# ブラウザデバッグ機能設定
# BROWSER_DEBUG_ENABLED=true
# BROWSER_HEADLESS=true
# BROWSER_TIMEOUT=60000

# === Functions Database Configuration (New in v2.1.0) ===
# 514関数データベース設定
# FUNCTION_DB_PATH=./sheets-functions/functions-database/index.js
# MCP_INFO_PATH=./mcp-process-info.txt

# === Performance Configuration ===
# パフォーマンス設定
# MAX_CONCURRENT_TOOLS=5
# TOOL_TIMEOUT=300000

